@model IEnumerable<student_groupe.Models.Student>

@{
    ViewData["Title"] = "GetStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetStudents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student_Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Filiere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Filiere)
            </td>
            <td>
                <a asp-action="Edit_Student" asp-route-id="@item.Student_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |
                <a asp-action="Delete_Student" asp-route-id="@item.Student_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
